@using VendorTracker.Models;

<h1>Vendor Info Page:</h1>
<h2>Name: @Model["vendor"].Name</h2>
<h3>Description: @Model["vendor"].Description</h3>

<h3>A list of all the vendors orders</h3>
<ol
@foreach(var order in @Model["orders"])
{
  <h4><li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li></h4>
}
</ol>
<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>

<p><a href='/vendors'>Return to vendor list</a></p> <br>
<p><a href='/'>Return to Home Page</a></p>